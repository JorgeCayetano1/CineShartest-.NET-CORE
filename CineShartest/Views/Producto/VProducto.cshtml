@model IEnumerable<CineShartest.Models.Producto>

@{
    ViewData["Title"] = "Lista de Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Productos Dulceria</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="getAdd" asp-controller="Producto">Agregar Nuevo Producto</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdProd)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.NomProd)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.PrecioProd)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.CantProd)</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.IdProd</th>
                            <td>@item.NomProd</td>
                            <td>@Convert.ToDecimal(item.PrecioProd)</td>
                            <td>@Convert.ToInt32(item.CantProd)</td>
                            <td><a class="btn btn-warning" asp-controller="Producto" asp-action="getEdit" asp-route-id="@item.IdProd">Editar</a></td>
                            <td><a type="button" class="btn btn-danger" asp-controller="Producto" asp-action="getDelete" asp-route-id="@item.IdProd">Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>no existen registros</p>
        }
    </div>
</div>