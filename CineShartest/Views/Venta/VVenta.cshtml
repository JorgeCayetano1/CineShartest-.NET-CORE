@model IEnumerable<CineShartest.Models.Ventum>

@{
    ViewData["Title"] = "Lista de Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Ventas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="getAdd" asp-controller="Venta">Agregar Nueva Venta</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdVenta)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdEmp)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.FechaVent)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.AsieVent)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.TpagoVent)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdCli)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdCartelera)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.CodEst)</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.IdVenta</th>
                        <td>@item.IdEmp</td>
                        <td>@item.FechaVent</td>
                        <td>@item.AsieVent</td>
                        <td>@item.TpagoVent</td>
                        <td>@item.IdCli</td>
                        <td>@item.IdCartelera</td>
                        <td>@Convert.ToInt32(item.CodEst)</td>
                        <td><a class="btn btn-warning" asp-controller="Venta" asp-action="getEdit" asp-route-id="@item.Id">Editar</a></td>
                        <td><a type="button" class="btn btn-danger" asp-controller="Venta" asp-action="getDelete" asp-route-id="@item.Id">Eliminar</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>no existen registros</p>
        }
    </div>
</div>