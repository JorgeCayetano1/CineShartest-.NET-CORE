@model CineShartest.Models.Ventum
@{
    ViewData["Title"] = "Eliminar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Eliminar Venta</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="getDeleteVenta">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdEmp"></label>
                    <input asp-for="IdEmp" class="form-control" placeholder="Empleado">
                    <span asp-validation-for="IdEmp" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaVent"></label>
                    <input asp-for="FechaVent" class="form-control" placeholder="Fecha de venta">
                    <span asp-validation-for="FechaVent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AsieVent"></label>
                    <input asp-for="AsieVent" class="form-control" placeholder="Asientos Vendidos">
                    <span asp-validation-for="AsieVent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TpagoVent"></label>
                    <input asp-for="TpagoVent" class="form-control" placeholder="Tipo de pago de ventas">
                    <span asp-validation-for="TpagoVent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCli"></label>
                    <input asp-for="IdCli" class="form-control" placeholder="Cliente">
                    <span asp-validation-for="IdCli" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCartelera"></label>
                    <input asp-for="IdCartelera" class="form-control" placeholder="Cartelera">
                    <span asp-validation-for="IdCartelera" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodEst"></label>
                    <input asp-for="CodEst" class="form-control" placeholder="Estado">
                    <span asp-validation-for="CodEst" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{<partial name="_ValidationScriptsPartial" />}
}