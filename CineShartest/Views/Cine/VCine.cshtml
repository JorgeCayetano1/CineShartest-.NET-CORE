@model IEnumerable<CineShartest.Models.Cine>

@{
    ViewData["Title"] = "Lista de Cines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Cines</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="getAdd" asp-controller="Cine">Agregar Nuevo Cine</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdCine)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.NomEmp)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.DirCine)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.CodCiudad)</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.IdCine</th>
                            <td>@item.NomEmp</td>
                            <td>@item.DirCine</td>
                            <td>@Convert.ToInt32(item.CodCiudad)</td>
                            <td><a class="btn btn-warning" asp-controller="Cine" asp-action="getEdit" asp-route-id="@item.Id">Editar</a></td>
                            <td><a type="button" class="btn btn-danger" asp-controller="Cine" asp-action="getDelete" asp-route-id="@item.Id">Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>no existen registros</p>
        }
    </div>
</div>