@model IEnumerable<CineShartest.Models.Cartelera>

@{
    ViewData["Title"] = "Lista de Cartelera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Carteleras</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="getAdd" asp-controller="Cartelera">Agregar Nueva Cartelera</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdCartelera)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdPeli)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdSala)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.HoraIni)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.HoraFin)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Fecha)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.CodEst)</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.IdCartelera</th>
                        <td>@item.IdPeli</td>
                        <td>@item.IdSala</td>
                        <td>@item.HoraIni</td>
                        <td>@item.HoraFin</td>
                        <td>@item.Fecha</td>
                        <td>@item.CodEst</td>
                        <td><a class="btn btn-warning" asp-controller="Cartelera" asp-action="getEdit" asp-route-id="@item.Id">Editar</a></td>
                        <td><a type="button" class="btn btn-danger" asp-controller="Cartelera" asp-action="getDelete" asp-route-id="@item.Id">Eliminar</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>no existen registros</p>
        }
    </div>
</div>