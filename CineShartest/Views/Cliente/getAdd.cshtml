@model CineShartest.Models.Cliente
@{
    ViewData["Title"] = "Nuevo Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="Add">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Cliente</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="getAdd">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NOM_CLI"></label>
                    <input asp-for="NOM_CLI" class="form-control" placeholder="Nombres">
                    <span asp-validation-for="NOM_CLI" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="APE_CLI"></label>
                    <input asp-for="APE_CLI" class="form-control" placeholder="Apellidos">
                    <span asp-validation-for="APE_CLI" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DNI"></label>
                    <input asp-for="DNI" class="form-control" placeholder="DNI">
                    <span asp-validation-for="DNI" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}