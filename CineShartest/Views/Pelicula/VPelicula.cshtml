@model IEnumerable<CineShartest.Models.Pelicula>

@{
    ViewData["Title"] = "Lista de Peliculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Peliculas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="getAdd" asp-controller="Pelicula">Agregar Nueva Pelicula</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdPeli)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Titulo)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.DescripPeli)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.DurPeli)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.CodGene)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.ClasifPeli)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Portada)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.CodEst)</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.IdPeli</th>
                        <td>@item.Titulo</td>
                        <td>@item.DescripPeli</td>
                        <td>@item.DurPeli</td>
                        <td>@Convert.ToInt32(item.CodGene)</td>
                        <td>@item.ClasifPeli</td>
                        <td><img src="~/portada/@(item.Portada).jpg" class="col-12"/></td>
                        <td>@Convert.ToInt32(item.CodEst)</td>
                        <td><a class="btn btn-warning" asp-controller="Pelicula" asp-action="getEdit" asp-route-id="@item.Id">Editar</a></td>
                        <td><a type="button" class="btn btn-danger" asp-controller="Pelicula" asp-action="getDelete" asp-route-id="@item.Id">Eliminar</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>no existen registros</p>
        }
    </div>
</div>